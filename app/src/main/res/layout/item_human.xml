<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="@dimen/padding_default"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item.img"
        android:src="@drawable/ic_person_outline_black_24dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/item.txt.name"
        android:layout_margin="@dimen/margin_default"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_toRightOf="@id/item.img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item.txt.birth.day"
        android:layout_margin="@dimen/margin_default"
        android:layout_below="@id/item.txt.name"
        android:layout_toRightOf="@id/item.img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item.edit"
        android:padding="@dimen/padding_default"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_edit_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item.delete"
        android:padding="@dimen/padding_default"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/item.edit"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>